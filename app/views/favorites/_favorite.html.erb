<div id="favorite_<%= @lesson.id %>">
  <% if !Favorite.exists?(user: current_user, lesson_id: @lesson.id) %>
    <%= link_to lesson_favorites_path(@lesson), method: :post, remote: true, class: "favorite-btn favorite-post text-primary" do %>
      <i class="fa-lg fas fa-heart"></i>
      <%= @lesson.favorites.length %>
    <% end %>
  <% else %>
    <%= link_to lesson_favorites_path(@lesson), method: :delete, remote: true, class: "favorite-btn favorite-delete text-danger" do %>
      <i class="fa-lg fas fa-heart"></i>
      <%= @lesson.favorites.length %>
    <% end %>
  <% end %>
</div>
