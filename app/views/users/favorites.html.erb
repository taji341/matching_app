<div class="container">
  <%= render "shared/mypage_tabs" %>
  <% if @favorite_list.present? %>
    <div class="row">
      <% @favorite_list.each do |lesson| %>
      <div class="col-sm-12 col-lg-6 col-xl-4">
        <div class="lesson-content shadow m-3">
          <%= link_to lesson_path(lesson) do %>
            <div class="lesson-image">
              <%= image_tag lesson.image.to_s, class: "img-fluid" %>
              <div class="view-count text-info">
                <i class="fa-solid fa-eye"></i>
                <%= lesson.impressions_count %>
                <i class="fa-lg fas fa-heart liked"></i>
                <%= lesson.favorites.length %>
              </div>
            </div>
            <div class="bg-info text-white">
              <h4 class="pl-3"><%= lesson.title %></h4>
              <div class="user-profile d-flex flex-row p-2">
                <%= image_tag lesson.user.image.to_s, class: "rounded-circle lesson-icon" %>
                <p class="col-7"><%= lesson.user.name %></p>
                <p class="col-2"><%= lesson.address %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <% end %>  
    </div>
  <% end %>
</div>
