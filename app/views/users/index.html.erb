<div class="container">
  <%= render "shared/mypage_tabs" %>
  <div class="mypage-main mb-5">
    <div class="lesson-registration">
      <%= link_to 'レッスンを登録', new_lesson_path, class: "btn btn-info btn-lg btn-block" unless @lesson %>
    </div>
    <% if @lesson %>
      <div class="edit-lesson d-flex justify-content-center mb-4">
        <%= link_to 'レッスンを編集', edit_lesson_path(@lesson.id), class: "btn btn-info w-75 " %>
      </div>
      <%= render "shared/lesson_content" %>
    <% end %>
  </div>
</div>

