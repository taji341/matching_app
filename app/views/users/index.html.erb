<div class="container">
  <%= render "shared/mypage_tabs" %>
  <div class="mypage-main mb-5">
    <% if user_information_created? %>
      <div class="lesson-registration">
        <%= link_to 'レッスンを登録', new_lesson_path, class: "btn btn-info btn-lg btn-block" unless @lesson %>
      </div>
    <% else %>
      <h2 class="p-5 text-center">レッスンを登録するには下のボタンをクリック!</h2>
      <%= link_to "ユーザー情報登録へ", edit_user_path(current_user.id), class: "btn btn-info btn-lg btn-block p-3" %>
    <% end %>
    <% if @lesson %>
      <div class="edit-lesson d-flex justify-content-center mb-4">
        <%= link_to 'レッスンを編集', edit_lesson_path(@lesson.id), class: "btn btn-info btn-lg btn-block" %>
      </div>
      <%= render "shared/lesson_content" %>
    <% end %>
  </div>
</div>

