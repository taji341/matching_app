<div class="container">
  <div class="lesson-top p-3 text-info">
    <h3>レッスンの内容を入力してください</h3>
  </div>
  <div class="lesson-field shadow p-4 mb-4">
    <%= form_with model: @lesson do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="field">
        <%= f.label :title ,"タイトル" %>
        <%= f.text_field :title, class: "form-control", placeholder: "タイトル名" %>
      </div>
      <div class="field">
        <%= f.label :image ,"メイン写真" %>
        <%= f.file_field :image, id: :lesson_image, class: "form-control-file" %>
      </div>
      <div class="field">
        <%= f.label :information , "説明"%>
        <%= f.text_area :information, class: "form-control", placeholder: "タイトル名", size: "20x10" %>
      </div>
      <div class="field">
        <%= f.label :schedule ,"日程" %>
        <%= f.text_field :schedule, class: "form-control", placeholder: "タイトル名" %>
      </div>
      <div class="field">
        <%= f.label :price ,"値段" %>
        <%= f.text_field :price, class: "form-control", placeholder: "タイトル名" %>
      </div>
      <div class="field">
        <%= f.label :address ,"場所" %>
        <%= f.text_field :address, class: "form-control", placeholder: "タイトル名" %>
      </div>
      <div class="field pt-3">
        <%= f.submit "登録する", class: "btn btn-primary mr-3"%>
        <%= link_to "削除する", lessons_path, method: :delete, data: { confirm: "レッスンを削除してよろしいですか？" }, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
