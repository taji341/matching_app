<div class="container">
  <div class="lesson-top p-3 text-info">
    <h3>レッスンの内容を入力してください</h3>
  </div>
  <div class="lesson-field shadow p-4 mb-4">
    <%= form_with(model: @lesson, local: true) do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="field">
        <%= f.label :title ,"レッスンタイトル" %>
        <%= f.text_field :title, class: "form-control", placeholder: "例 ピアノレッスン 初心者の方でもご気軽に！" %>
      </div>
      <div class="field">
        <%= f.label :image ,"メイン写真" %>
        <%= f.file_field :image, id: :lesson_image, class: "form-control-file" %>
      </div>
      <div class="field">
        <%= f.label :information , "説明"%>
        <%= f.text_area :information, class: "form-control",size: "20x10", placeholder: lesson_placeholder %>
      </div>
      <div class="field">
        <%= f.label :schedule ,"日程" %>
        <%= f.text_field :schedule, class: "form-control", placeholder: "例 毎週月火水開催！" %>
      </div>
      <div class="field">
        <%= f.label :price ,"値段" %>
        <%= f.text_field :price, class: "form-control", placeholder: "例 1h/1000~" %>
      </div>
      <div class="field">
        <%= f.label :address ,"場所" %>
        <%= f.text_field :address, class: "form-control", placeholder: "例 ○○駅周辺/オンライン可" %>
      </div>
      <div class="field pt-3">
        <%= f.submit "登録する", class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
