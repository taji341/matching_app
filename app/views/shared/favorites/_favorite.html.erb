<% if !Favorite.exists?(user: current_user, lesson_id: @lesson.id) %>
  <%= link_to lesson_favorites_path(@lesson), method: :post, remote: true, class: "favorite-btn favorite-post" do %>
    <i class="fa-lg fas fa-heart not-liked"></i>
    <%= @lesson.favorites.length %>
  <% end %>
<% else %>
  <%= link_to lesson_favorites_path(@lesson), method: :delete, remote: true, class: "favorite-btn favorite-delete" do %>
    <i class="fa-lg fas fa-heart liked"></i>
    <%= @lesson.favorites.length %>
  <% end %>
<% end %>

